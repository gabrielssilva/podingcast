<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextAppearance.Primary">
        <item name="android:textSize">26sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.Primary.Dark" parent="TextAppearance.Primary">
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="TextAppearance.Secondary">
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextAppearance.Long">
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextAppearance.Secondary.Dark" parent="TextAppearance.Secondary">
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="TextAppearance.Primary.ListItem">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Secondary.ListItem">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText.Dark" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/primary_light</item>
    </style>


    <!-- Layout styles -->
    <style name="PagerStrip">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="PodcastItemCaption">
        <item name="android:background">@color/primary_light</item>
        <item name="android:alpha">0.85</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/primary</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

</resources>
