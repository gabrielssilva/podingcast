<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!-- Text Styles -->
    <style name="TextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:typeface">sans</item>
    </style>

    <style name="TextAppearance.PagerStrip">
        <item name="android:paddingTop">7dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Primary">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextAppearance.Secondary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextAppearance.Primary.ListItem">
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="TextAppearance.Secondary.ListItem">
        <item name="android:layout_marginLeft">25dp</item>
    </style>


</resources>
