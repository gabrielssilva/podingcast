<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Primary.Dark"
            android:text="@string/title_activity_add_feed"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_field_add_podcast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                style="@style/EditText.Dark"
                android:inputType="text"
                android:hint="@string/hint_add_podcast"
                android:imeOptions="actionSearch"/>

            <ProgressBar
                android:id="@+id/progress_add_podcast"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:visibility="invisible"/>

        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/results_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>